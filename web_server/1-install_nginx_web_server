#!/bin/bash
# 1-install_nginx_web_server
# Script to install Nginx and configure root page with Holberton School

# Update package list and install Nginx
apt-get update -y
apt-get install -y nginx

# Remove default pages that may interfere
rm -f /var/www/html/index.nginx-debian.html
rm -f /var/www/html/index.php

# Write Holberton School to index.html with sudo
echo "Holberton School" | tee /var/www/html/index.html > /dev/null

# Restart Nginx using service (systemctl not allowed)
service nginx restart
